<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		<nav>
			<a href="/products/new">Add a New Product</a>
		</nav>
	</head>



	<body>
		<h1>Mongoose Store</h1>
		<ul>
			<% products.forEach(product => { %>
            <li>
				<img src=<%=product.img%> alt=<%=product.name;%>>
                <a href="/products/<%=product._id; %>"> <%=product.name; %> </a>
            </li>
			<% }) %>
		</ul>
	</body>
</html>